	</bean>

	<!-- MovieDAO -->
	<bean id="movieDAOHibernate" class="com.kidscodetw.eeit.dao.movie.MovieDAOHibernate">
		<constructor-arg ref="sessionFactory"></constructor-arg>
	</bean>

	<bean id="movieDAO" class="com.kidscodetw.eeit.service.movie.MovieService">
