<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.kidscodetw.eeit.entity.message.MessageBean" table="Message" >
        
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        
        <property name="sender" column="sender" />
        <property name="receiver" column="receiver" />
        <property name="message" column="message" />
        <property name="timestamp" column="timestamp" generated="insert"/>
        
    </class>
</hibernate-mapping>